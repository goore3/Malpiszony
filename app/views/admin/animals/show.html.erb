<h1><%= @animals.name %></h1>
<ul>
    <li>
        Nazwa: <%= @animals.name %>
    </li>
    <li>
        Gatunek: <%= @animals.species %>
    </li>
    <li>
        Wiek: <%= @animals.age %>
    </li>
    <li>
        Wybieg: <%= Enclosure.find(@animals.enclosure_id).name.to_s+"/"+@animals.enclosure_id.to_s %>
    </li>
</ul>
<p><%= @animals.description %></p>


<h2>Notatki o zwierzęciu <%= @animals.name %> <h2>

<div class="row">
  <% @notes.each do |note| %>
    <div class="col-sm-6">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= note.date %></h5>
            <p class="card-text"><%= note.content %></p>
            <td><%= button_to "Usuń", admin_animal_note_path(:animal_id => @animals.id, :id => note.id), class: "btn btn-danger", form: { data: { turbo_confirm: "Czy na pewno?" } }, method: :delete%></td>
            <%= note.id %>
        </div>
        </div>
    </div>
  <% end %>
</div>

<td><%= link_to "Dodaj notke", new_admin_animal_note_path(:animal_id => @animals.id), class: "btn btn-success"%></td>
<td><%= link_to "Powrót", admin_animals_url, class: "btn btn-info"%></td>

