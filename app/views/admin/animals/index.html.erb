<h1>Nasze zwierzątka</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nazwa</th>
      <th scope="col">Gatunek</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <th scope="row"><%=animal.id%></th>
        <td><%=animal.name%></td>
        <td><%=animal.species%></td>
        <td><%= button_to "Usuń", admin_animal_path(animal), class: "btn btn-danger", form: { data: { turbo_confirm: "Czy na pewno?" } }, method: :delete%></td>
        <td><a href="<%= edit_admin_animal_path(animal) %>" type="a" class="btn btn-warning">Edytuj</a></td>
        <td><a href="<%= admin_animal_path(animal) %>" type="a" class="btn btn-info">Szczegóły</a></td>
        <td><button>Costam</button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "+", new_admin_animal_path, class: "btn btn-success"%>