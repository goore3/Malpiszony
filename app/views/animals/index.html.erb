<h1>Nasze zwierzątka</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nazwa</th>
      <th scope="col">Gatunek</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @animals.each do |animal| %>
    <tr>
      <th scope="row"><%=animal.id%></th>
      <td><%=animal.name%></td>
      <td><%=animal.species%></td>
      <td><a type="a" class="btn btn-danger">Usuń</a></td>
      <td><a type="a" class="btn btn-warning">Edytuj</a></td>
      <td><a type="a" class="btn btn-info">Szczegóły</a></td>
    </tr>
    <% end %>
  </tbody>
</table>