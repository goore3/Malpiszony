<%= month_calendar events: @events do |date,events| %>
  <div class="dayContainer">
  <div class="dayNumber">
    <%= date.day %>
  </div>
  <% events.each do |event| %>
      <div class="eventDropdown">
        <div class="eventHover">
          <div class="eventName">
            <%= event.name %>
          </div>
          <%= link_to "Zarezerwuj", new_reservation_path(:event_id => event.id) %>
        </div>
        <div class="eventDescription">
          <div>
            <b><%= event.description %></b>
          </div>
          <div>
            PoczÄ…tek wydarzenia:</br> <%= event.start_time.strftime("%d-%m-%Y %H:%M") %>
          </div>
          <div>
            Koniec wydarzenia:</br> <%= event.end_time.strftime("%d-%m-%Y %H:%M") %>
          </div>
        </div>
      </div>
  <% end %>
  </div>
<%end%>