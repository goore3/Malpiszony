<%= month_calendar events: @events do |date,events| %>
  <div class="dayContainer">
  <div class="dayNumber">
    <%= date.day %>
  </div>
  <% events.each do |event| %>
      <div class="eventDropdown">
        <div class="eventHover">
          <div class="eventName">
            <%= event.name %>
          </div>
          <%= link_to "Zarezerwuj", new_reservation_path(:event_id => event.id) %>
        </div>
        <div class="eventDescription">
          <div>
            Nazwa wydarzenia: <%= event.name %>
          </div>
          <div>
            PoczÄ…tek wydarzenia: <%= event.start_time %>
          </div>
          <div>
            Koniec wydarzenia: <%= event.end_time %>
          </div>
        </div>
      </div>
  <% end %>
  </div>
<%end%>